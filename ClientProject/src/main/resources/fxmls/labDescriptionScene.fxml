<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" minHeight="300" minWidth="50" prefHeight="450.0" prefWidth="280.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.senina.itmo.lab8.sceneControllers.LabInfoController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label fx:id="titleAddingElementLabel" alignment="CENTER" contentDisplay="CENTER" text="Element values:">
        <font>
            <Font size="14.0" />
        </font></Label>
    <HBox spacing="10">
        <Label fx:id="nameLabel" text="name:" />
        <Label fx:id="nameValueLabel"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="CoordinatesLabel" text="coordinates:" />
        <Label  fx:id="xCoordinateValueLabel" />
        <Label fx:id="yCoordinateValueLabel" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="minimalPointLabel" text="minimal point:" />
        <Label fx:id="minimalPointValueLabel"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="averagePointLabel" text="average point:" />
        <Label fx:id="averagePointValueLabel" prefWidth="50" />
    </HBox>
        <Label fx:id="descriptionLabel" text="description:" />
        <TextArea fx:id="disciplineNameArea" />
    <HBox spacing="10">
        <Label fx:id="difficultyLabel" text="difficulty:" />
        <Label fx:id="difficultyValueLabel"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="disciplineNLabel" text="discipline name:" />
        <Label fx:id="disciplineNameValueLabel" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="lectureHoursLabel" text="discipline lecture hours:" />
        <Label fx:id="lectureHoursValueLabel" prefWidth="50" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="practiceHoursLabel" text="discipline practice hours:" />
        <Label fx:id="practiceHoursValueLabel" prefWidth="50" />
    </HBox>

    <HBox spacing="10">
        <Label fx:id="selfStudyHoursLabel" text="discipline self-study hours:" />
        <Label fx:id="selfStudyHoursValueLabel" prefWidth="50" />
    </HBox>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="exitButton" onAction="#exitButtonClicked" mnemonicParsing="false" text="Exit" />
        </buttons>
    </ButtonBar>

</VBox>