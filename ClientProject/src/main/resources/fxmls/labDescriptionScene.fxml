<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" minHeight="300" minWidth="50" prefHeight="450.0" prefWidth="280.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.senina.itmo.lab8.sceneControllers.LabInfoController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label fx:id="titleElementLabel" alignment="CENTER" contentDisplay="CENTER">
        <font>
            <Font size="14.0" />
        </font></Label>
    <HBox spacing="10">
        <Label fx:id="nameLabel"/>
        <Label fx:id="nameValueLabel"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="coordinatesLabel" text="coordinates:" />
        <Label  fx:id="xCoordinateValueLabel" />
        <Label fx:id="yCoordinateValueLabel" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="minimalPointLabel" />
        <Label fx:id="minimalPointValueLabel"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="averagePointLabel"/>
        <Label fx:id="averagePointValueLabel" prefWidth="50" />
    </HBox>
        <Label fx:id="descriptionLabel"/>
        <TextArea fx:id="disciplineNameArea" />
    <HBox spacing="10">
        <Label fx:id="difficultyLabel"/>
        <Label fx:id="difficultyValueLabel"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="disciplineNameLabel"/>
        <Label fx:id="disciplineNameValueLabel" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="lectureHoursLabel"/>
        <Label fx:id="lectureHoursValueLabel" prefWidth="50" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="practiceHoursLabel"/>
        <Label fx:id="practiceHoursValueLabel" prefWidth="50" />
    </HBox>

    <HBox spacing="10">
        <Label fx:id="selfStudyHoursLabel"/>
        <Label fx:id="selfStudyHoursValueLabel" prefWidth="50" />
    </HBox>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button fx:id="exitButton" onAction="#exitButtonClicked" mnemonicParsing="false"/>
        </buttons>
    </ButtonBar>

</VBox>