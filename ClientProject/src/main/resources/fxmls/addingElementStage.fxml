<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" minHeight="300" minWidth="50" spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.senina.itmo.lab8.sceneControllers.AddingElementController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label fx:id="titleAddingElementLabel" alignment="CENTER" contentDisplay="CENTER">
      <font>
         <Font size="14.0" />
      </font></Label>
    <HBox spacing="10">
        <Label fx:id="nameLabel"/>
        <TextField fx:id="nameField"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="coordinatesLabel"/>
        <TextField prefWidth="50" fx:id="xCoordinateField" />
        <TextField fx:id="yCoordinateField" prefWidth="50" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="minimalPointLabel" />
        <TextField fx:id="minimalPointField" prefWidth="50" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="averagePointLabel" />
        <TextField fx:id="averagePointField" prefWidth="50" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="descriptionLabel" />
        <TextArea fx:id="descriptionField" prefHeight="40.0" prefWidth="200" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="difficultyLabel" />
        <ChoiceBox fx:id="difficulty" prefWidth="150.0" value="Choose difficulty"/>
    </HBox>
    <HBox spacing="10">
        <Label fx:id="disciplineNameLabel"/>
        <TextField fx:id="disciplineNameField" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="lectureHoursLabel"/>
        <TextField fx:id="lectureHoursField" prefWidth="50" />
    </HBox>
    <HBox spacing="10">
        <Label fx:id="practiceHoursLabel" />
        <TextField fx:id="practiceHoursField" prefWidth="50" />
    </HBox>

    <HBox spacing="10">
        <Label fx:id="selfStudyHoursLabel"/>
        <TextField fx:id="selfStudyHoursField" prefWidth="50" />
    </HBox>

    <Label fx:id="warningLabel" />
    <Button fx:id="applyButton" onAction="#addElementButton" prefWidth="80" text="apply" />

</VBox>
